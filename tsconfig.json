{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/test-helpers/*": ["./tests/utils/helpers/*"],
      "@/test-ids/*": ["./tests/utils/test-ids/*"],
      "@/test-consts/*": ["./tests/utils/consts/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js"],
  "exclude": [
    "node_modules",
    "tests/e2e/page-models",
    "tests/e2e/tests",
    "tests/utils/classes",
    "tests/utils/photos"
  ]
}
